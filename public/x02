<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FNAF Game</title>
    <style>
        body {
            background-color: black;
            color: white;
            text-align: center;
            font-family: Arial, sans-serif;
        }
        #game {
            width: 800px;
            height: 600px;
            margin: 0 auto;
            border: 2px solid white;
            position: relative;
        }
        .animatronic {
            width: 100px;
            height: 100px;
            position: absolute;
        }
    </style>
</head>
<body>
    <h1>Five Nights at Freddy's</h1>
    <div id="game">
        <div id="animatronic1" class="animatronic" style="top: 50px; left: 50px; background-color: red;"></div>
        <div id="animatronic2" class="animatronic" style="top: 200px; left: 200px; background-color: blue;"></div>
    </div>
    <script>
        // JavaScript to handle animatronic movements
        function moveAnimatronic(id, top, left) {
            const animatronic = document.getElementById(id);
            animatronic.style.top = top + 'px';
            animatronic.style.left = left + 'px';
        }

        // Example of moving animatronics
        setInterval(() => {
            moveAnimatronic('animatronic1', Math.random() * 500, Math.random() * 700);
            moveAnimatronic('animatronic2', Math.random() * 500, Math.random() * 700);
        }, 1000);
    </script>
</body>
